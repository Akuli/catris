# Copy to /etc/systemd/system/catris.service and run:
#
#    systemctl enable catris
#    systemctl start catris
#    systemctl status catris
#
# Logs should go to /var/log/syslog

[Unit]
Description=catris

[Service]
ExecStart=/usr/bin/python3 -m catris --lobbies
WorkingDirectory=/home/catris

User=catris
Group=nogroup

Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
